<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Kanaban view -->
    <record id="view_sprint_kanban" model="ir.ui.view">
        <field name="name">sprint.kanban</field>
        <field name="model">sprint</field>
        <field name="arch" type="xml">
            <kanban string="Sprint Kanban" highlight_color="color" default_group_by="state_id">
                <template>
                    <t t-name="menu" t-if="!selection_mode" groups="base.group_user">
                        <a t-if="widget.editable" role="menuitem" type="set_cover" class="dropdown-item"
                           data-field="displayed_image_id">Set Cover Image
                        </a>
                        <a name="167" role="menuitem" type="action" class="dropdown-item"
                           context="{'dialog_size': 'medium'}">Share Task
                        </a>
                        <a class="dropdown-item" role="menuitem" type="object" name="copy">Duplicate</a>
                        <div role="separator" class="dropdown-divider"/>
                        <field name="color" widget="kanban_color_picker"/>
                    </t>
                    <t t-name="card">

                    </t>
                </template>
            </kanban>
        </field>
    </record>
    <!-- form view -->
    <record id="view_sprint_form" model="ir.ui.view">
        <field name="name">sprint.form</field>
        <field name="model">sprint</field>
        <field name="arch" type="xml">
            <form string="Sprint Form">
                <sheet>
                    <group>
                        <field name="name"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    <!-- Action to display sprints in Kanban view -->
    <record id="action_sprint_kanban" model="ir.actions.act_window">
        <field name="name">Sprints</field>
        <field name="res_model">sprint</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Menu -->
    <menuitem id="sprints" name="Sprints" parent="project.menu_main_pm" action="action_sprint_kanban" sequence="98"/>

</odoo>
