<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- form view -->
    <record id="view_sprint_form" model="ir.ui.view">
        <field name="name">sprint.form</field>
        <field name="model">sprint</field>
        <field name="arch" type="xml">
            <form string="Sprint">
                <sheet>
                    <h1>
                        <field name="name"/>
                    </h1>
                    <field name="start_date"/>
                    <field name="end_date"/>
                    <notebook>
                        <page>
                            <group>
                                <field name="show_by_hours_or_number_of_tasks"/>
                            </group>
                            <div>
                                <field name="filter_user_or_team"/>
                                <field name="user_id" invisible="filter_user_or_team != 'user'"/>
                                <field name="team_id" invisible="filter_user_or_team != 'team'"/>
                            </div>
                            <group>
                                <field name="test"/>
                            </group>
                        </page>
                    </notebook>
                    <kanban>
                    </kanban>
                </sheet>
            </form>
        </field>
    </record>
<!-- sdojkiopd -->
    <!-- Action to display sprints in Kanban view -->
    <record id="action_sprint_kanban" model="ir.actions.act_window">
        <field name="name">Sprints</field>
        <field name="res_model">sprint</field>
        <field name="view_mode">kanban,list,form</field>
    </record>

    <!-- Menu item: Using a valid parent menu from the project module -->
    <menuitem id="sprints" name="Sprints" parent="project.menu_main_pm" action="action_sprint_kanban" sequence="98"/>

</odoo>
