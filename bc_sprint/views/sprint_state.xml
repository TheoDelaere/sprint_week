<?xml version="1.0" encoding="UTF-8" ?>
<odoo>

    <record id="view_sprint_state_list" model="ir.ui.view">
        <field name="name">sprint.state.list</field>
        <field name="model">sprint.state</field>
        <field name="arch" type="xml">
            <list>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </list>
        </field>
    </record>

    <record id="view_sprint_state_form" model="ir.ui.view">
        <field name="name">sprint.state.form</field>
        <field name="model">sprint.state</field>
        <field name="arch" type="xml">
            <form string="Sprint Week">
                <sheet>
                    <group>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!-- Action -->
    <record id="action_sprint_state" model="ir.actions.act_window">
        <field name="name">Sprints state</field>
        <field name="res_model">sprint.state</field>
        <field name="view_mode">list,form</field>
    </record>
</odoo>